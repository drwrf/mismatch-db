{
    "name": "drwrf/mismatch-db",
    "description": "A simple library for complex SQL.",
    "license": "MIT",
    "authors": [
        {
            "name": "frwrd",
            "email": "hi@drwrf.com"
        }
    ],

    "scripts": {
        "test": "phpunit test",
        "doc": "phpdoc"
    },

    "autoload": {
        "psr-4": {
            "Mismatch\\DB\\": [ "lib" ]
        },
        "files": [
            "lib/Expression.php"
        ]
    },

    "autoload-dev": {
        "psr-4": {
            "Mismatch\\DB\\": [ "test" ]
        }
    },

    "require": {
        "php": ">=5.4",
        "doctrine/dbal": "2.5.0-RC2"
    },

    "require-dev": {
        "phpunit/phpunit": "4.0.*@dev",
        "phpunit/php-code-coverage": "2.0.*@dev",
        "phpunit/phpunit-mock-objects": "2.0.*@dev",
        "mockery/mockery": "0.9",
        "phpdocumentor/phpdocumentor": "dev-master",
        "d11wtq/boris": "dev-master"
    },

    "extra": {
        "branch-alias": {
            "dev-master": "0.2.x-dev"
        }
    },

    "archive": {
        "exclude": ["vendor", "test"]
    }
}
